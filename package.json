{
  "name": "uni-final-project",
  "version": "0.0.0-semantic-release",
  "packageManager": "yarn@4.5.0",
  "type": "module",
  "workspaces": [
"packages/*",
"apps/*"
  ],
  "nohoist": [
"**/react",
"**/react-dom",
"**/typescript",
"**/@types/react",
"**/@types/react-dom"
  ],
  "scripts": {
"dev": "turbo run dev",
"build": "turbo run build",
"lint": "turbo run lint",
"lint:fix": "turbo run lint:fix",
"type-check": "turbo run type-check",
"test": "turbo run test",
"test:e2e": "playwright test",
"test:e2e:ui": "playwright test --ui",
"test:e2e:headed": "playwright test --headed",
"format": "prettier . --write",
"db:types": "supabase gen types typescript --local > packages/database/src/types.ts",
"diagrams:erd": "mmdc -i docs/report-materials/academic-report-diagrams.md -o enhanced-erd.png -t neutral -s 2 --cssFile docs/mermaid-theme.css",
"diagrams:architecture": "mmdc -i docs/report-materials/academic-report-diagrams.md -o enhanced-architecture.png -t neutral -s 2 --cssFile docs/mermaid-theme.css",
"diagrams:flowchart": "mmdc -i docs/report-materials/academic-report-diagrams.md -o enhanced-flowchart.png -t neutral -s 2 --cssFile docs/mermaid-theme.css",
"diagrams:all": "yarn diagrams:erd && yarn diagrams:architecture && yarn diagrams:flowchart",
"wireframes": "open docs/wireframes/index.html"
  },
  "devDependencies": {
"@mermaid-js/mermaid-cli": "^11.4.2",
"@next/eslint-plugin-next": "^15.3.2",
"@playwright/test": "^1.52.0",
"@typescript-eslint/eslint-plugin": "^8.32.1",
"@typescript-eslint/parser": "^8.32.1",
"dotenv": "^16.5.0",
"eslint": "^9.27.0",
"eslint-plugin-react": "^7.37.5",
"eslint-plugin-react-hooks": "^5.2.0",
"globals": "^16.2.0",
"prettier": "^3.5.3",
"puppeteer": "^24.10.0",
"turbo": "2.5.3",
"typescript": "^5.8.3"
  }
}
