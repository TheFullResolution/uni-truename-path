-- =============================================================================
-- STEP 6: Validation and completion logging
-- =============================================================================

DO $$
DECLARE
  total_usage_records integer;
  unique_applications integer;
  success_rate numeric;
  avg_response_time numeric;
BEGIN
  -- Count total records created
  SELECT COUNT(*) INTO total_usage_records FROM public.context_usage_analytics;
  
  -- Count unique applications
  SELECT COUNT(DISTINCT requesting_application) INTO unique_applications FROM public.context_usage_analytics;
  
  -- Calculate success rate
  SELECT 
(COUNT(*) FILTER (WHERE success = true))::numeric / COUNT(*) * 100
  INTO success_rate
  FROM public.context_usage_analytics;
  
  -- Calculate average response time for successful requests
  SELECT AVG(response_time_ms) INTO avg_response_time 
  FROM public.context_usage_analytics 
  WHERE success = true;
  
  RAISE LOG '‚úÖ Context Usage Analytics: Demo data seeding completed successfully';
  RAISE LOG 'üìä Total usage records created: %', total_usage_records;
  RAISE LOG 'üîó Unique applications integrated: %', unique_applications;
  RAISE LOG '‚ö° Average response time: %.2f ms', avg_response_time;
  RAISE LOG 'üìà Success rate: %.1f%%', success_rate;
  RAISE LOG 'üë• Academic personas: JJ (Polish Developer), Li Wei (Chinese Professional), Alex (Privacy-Conscious)';
  RAISE LOG 'üåç Demonstrates real-world OAuth/OIDC integration patterns for commercial viability';
END $$;