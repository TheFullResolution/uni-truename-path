{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
"build": {
  "dependsOn": ["^build"],
  "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
},
"dev": {
  "persistent": true,
  "cache": false
},
"transit": {
  "dependsOn": ["^transit"]
},
"lint": {
  "dependsOn": ["transit"]
},
"lint:fix": {
  "dependsOn": ["transit"],
  "cache": false
},
"type-check": {
  "dependsOn": ["^build"]
},
"test": {
  "dependsOn": ["^build"],
  "outputs": ["coverage/**"],
  "cache": true
},
"test:e2e": {
  "dependsOn": ["^build"],
  "cache": false,
  "outputs": ["test-results/**", "playwright-report/**"]
},
"test:coverage": {
  "dependsOn": ["^build"],
  "outputs": ["coverage/**"],
  "cache": true
},
"test:unit": {
  "dependsOn": ["^build"],
  "outputs": ["coverage/**"],
  "cache": true
},
"test:integration": {
  "dependsOn": ["^build"],
  "outputs": ["coverage/**"],
  "cache": true
}
  },
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_*", "SUPABASE_*"]
}
