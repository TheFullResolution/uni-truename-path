{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
"build": {
  "dependsOn": ["^build"],
  "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
},
"dev": {
  "persistent": true,
  "cache": false
},
"lint": {
  "dependsOn": ["^lint"]
},
"lint:fix": {
  "dependsOn": ["^lint:fix"],
  "cache": false
},
"type-check": {
  "dependsOn": ["^type-check"]
},
"test": {
  "dependsOn": ["^test"],
  "outputs": ["coverage/**"]
},
"test:e2e": {
  "dependsOn": ["build"],
  "cache": false
}
  },
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_*", "SUPABASE_*"]
}
